<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
android:layout_margin="10dp"

    >

    <TableLayout
        android:id="@+id/table"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="SIZE|"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PIECES"
                android:textSize="30sp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/s"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="Small"
                android:textSize="@dimen/clothesSize" />

            <EditText
                android:id="@+id/s_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:fontFamily="cursive"
                android:inputType="number"
                android:textSize="@dimen/clothesSize" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="M"
                android:textSize="@dimen/clothesSize" />


            <EditText
                android:id="@+id/m_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:ems="10"
                android:fontFamily="cursive"
                android:inputType="number"
                android:textSize="@dimen/clothesSize" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="L"
                android:textSize="@dimen/clothesSize" />


            <EditText
                android:id="@+id/l_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:ems="10"
                android:fontFamily="cursive"
                android:inputType="number"
                android:textSize="@dimen/clothesSize" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/xl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="XL"
                android:textSize="@dimen/clothesSize" />


            <EditText
                android:id="@+id/xl_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="cursive"
                android:inputType="number"
                android:textSize="@dimen/clothesSize" />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/xxl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:text="XXL"
                android:textSize="@dimen/clothesSize" />


            <EditText
                android:id="@+id/xxl_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:fontFamily="cursive"
                android:inputType="number"
                android:textSize="@dimen/clothesSize" />

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_below="@+id/table">

        <Button
            android:textColor="@color/white"
            android:background="@color/green"
            android:id="@+id/okSizePieces"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OK" />

    </RelativeLayout>

