<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearlayout"
    tools:context=".FollowingListActivity">
    <TextView
        android:gravity="center"
        android:textSize="25sp"
        android:fontFamily="@font/shoroqfont"
        android:text="قائمة الموردين"
        android:textColor="@color/txtColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ProgressBar
        android:id="@+id/FollowingProgress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@+id/mainImage"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/progressbarcircle"
        android:max="100"
        android:progress="1" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/followingRV"
        android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</android.support.v7.widget.RecyclerView>
</LinearLayout>