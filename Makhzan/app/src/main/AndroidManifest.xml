<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.makhzan.amr.makhzan">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- for ,ultiple images selection -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity android:name=".edit_ProfileActivity" />
        <activity android:name=".MyAdsActivity" />
        <activity android:name=".MainAdsActivity" />
        <activity android:name=".SingleAdActivity" />
        <activity android:name=".Login2Activity">
            <intent-filter>
                <action android:name="main.com" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".CountriesActivity" />
        <activity android:name=".EditAdActivity" />
        <activity android:name=".ContactToPayActivity" />
        <activity android:name=".ShowActivity" />
        <activity android:name=".ShowProfileActivity" />
        <activity android:name=".FollowingListActivity">
            <intent-filter>
                <action android:name="NOTIFICATIONTARGER.COM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ShowAdFromProfileActivity" />
        <activity android:name=".NotificationActivity" />

        <service android:name=".FirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".FirebaseMessaging">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.firebase.messaging.default_notification_icon"
            android:resource="@drawable/m" />
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="@string/default_notification_channel_id" />

        <activity android:name=".AdsOfFollowingActivity" />
        <activity android:name=".BasicActivity" />
        <activity android:name=".OrdersActivity" />
        <activity android:name=".MyOrdersActivity" />
        <activity android:name=".CustomersActivity" />
        <activity android:name=".CustomersListActivity">
            <intent-filter>
                <action android:name="NOTIFICATIONT.COM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingActivity" />
        <activity android:name=".CustomerOrdersActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".SignOutScreenActivity" />
        <activity android:name=".ImageActivity" />
        <activity android:name=".MyShopActivity" />
        <activity android:name=".CreateShoppingCartActivity"></activity>
    </application>

</manifest>